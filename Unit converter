def convert_length(value, from_unit, to_unit):
    """Converts a length value from one unit to another."""
    length_units = {
        "meter": 1.0, "kilometer": 1000.0, "centimeter": 0.01,
        "millimeter": 0.001, "mile": 1609.34, "yard": 0.9144,
        "foot": 0.3048, "inch": 0.0254
    }
    if from_unit not in length_units or to_unit not in length_units:
        return "Invalid length unit."
    
    # Convert to meters first, then to the target unit
    value_in_meters = value * length_units[from_unit]
    converted_value = value_in_meters / length_units[to_unit]
    return converted_value

def convert_temperature(value, from_unit, to_unit):
    """Converts a temperature value from one unit to another."""
    if from_unit == to_unit:
        return value

    if from_unit == "celsius":
        if to_unit == "fahrenheit":
            return (value * 9/5) + 32
        elif to_unit == "kelvin":
            return value + 273.15
    elif from_unit == "fahrenheit":
        if to_unit == "celsius":
            return (value - 32) * 5/9
        elif to_unit == "kelvin":
            return (value - 32) * 5/9 + 273.15
    elif from_unit == "kelvin":
        if to_unit == "celsius":
            return value - 273.15
        elif to_unit == "fahrenheit":
            return (value - 273.15) * 9/5 + 32
    return "Invalid temperature unit or conversion."

def convert_weight(value, from_unit, to_unit):
    """Converts a weight value from one unit to another."""
    weight_units = {
        "kilogram": 1.0, "gram": 0.001, "milligram": 0.000001,
        "pound": 0.453592, "ounce": 0.0283495
    }
    if from_unit not in weight_units or to_unit not in weight_units:
        return "Invalid weight unit."
    
    # Convert to kilograms first, then to the target unit
    value_in_kg = value * weight_units[from_unit]
    converted_value = value_in_kg / weight_units[to_unit]
    return converted_value

def main():
    print("Welcome to the Unit Converter!")
    print("Available categories: length, temperature, weight")
    category = input("Enter the category you want to convert: ").lower()

    if category == "length":
        value = float(input("Enter the value to convert: "))
        from_unit = input("Enter the unit to convert from (e.g., meter, kilometer, foot): ").lower()
        to_unit = input("Enter the unit to convert to (e.g., meter, kilometer, foot): ").lower()
        result = convert_length(value, from_unit, to_unit)
    elif category == "temperature":
        value = float(input("Enter the value to convert: "))
        from_unit = input("Enter the unit to convert from (e.g., celsius, fahrenheit, kelvin): ").lower()
        to_unit = input("Enter the unit to convert to (e.g., celsius, fahrenheit, kelvin): ").lower()
        result = convert_temperature(value, from_unit, to_unit)
    elif category == "weight":
        value = float(input("Enter the value to convert: "))
        from_unit = input("Enter the unit to convert from (e.g., kilogram, gram, pound): ").lower()
        to_unit = input("Enter the unit to convert to (e.g., kilogram, gram, pound): ").lower()
        result = convert_weight(value, from_unit, to_unit)
    else:
        result = "Invalid category."

    print(f"Result: {result}")

if __name__ == "__main__":
    main()
