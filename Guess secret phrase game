import random

def get_random_phrase():
    phrases = [
        "python programming is fun",
        "learn to code everyday",
        "online compilers are convenient",
        "mastering new skills takes time",
        "the quick brown fox jumps over the lazy dog"
    ]
    return random.choice(phrases)

def display_phrase(phrase, guessed_letters):
    displayed = ""
    for char in phrase:
        if char == " ":
            displayed += " "
        elif char in guessed_letters:
            displayed += char
        else:
            displayed += "_"
    return displayed

def play_game():
    secret_phrase = get_random_phrase()
    guessed_letters = set()
    attempts = 8
    
    print("Welcome to Guess the Secret Phrase!")
    print("Try to guess the hidden phrase by entering one letter at a time.")
    print(f"You have {attempts} attempts.")

    while attempts > 0:
        current_display = display_phrase(secret_phrase, guessed_letters)
        print(f"\nPhrase: {current_display}")
        print(f"Guessed letters: {', '.join(sorted(list(guessed_letters)))}")
        print(f"Attempts remaining: {attempts}")

        if "_" not in current_display:
            print("\nCongratulations! You guessed the phrase!")
            break

        guess = input("Enter a letter: ").lower()

        if len(guess) != 1 or not guess.isalpha():
            print("Invalid input. Please enter a single letter.")
            continue

        if guess in guessed_letters:
            print("You already guessed that letter. Try again.")
            continue

        guessed_letters.add(guess)

        if guess in secret_phrase:
            print(f"Good guess! '{guess}' is in the phrase.")
        else:
            print(f"Sorry, '{guess}' is not in the phrase.")
            attempts -= 1

    if attempts == 0:
        print("\nGame Over! You ran out of attempts.")
        print(f"The secret phrase was: {secret_phrase}")

if __name__ == "__main__":
    play_game()
