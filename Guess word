import random

def play_battle_of_words():
    """
    Plays a word guessing game where the player tries to guess a hidden word.
    """
    words = ['python', 'programming', 'developer', 'challenge', 'computer', 'algorithm', 'function', 'variable']
    secret_word = random.choice(words).lower()
    guessed_letters = []
    attempts = 7  # Number of incorrect guesses allowed

    print("Welcome to Battle of Words!")
    print("Try to guess the hidden word.")

    while attempts > 0:
        display_word = ""
        for letter in secret_word:
            if letter in guessed_letters:
                display_word += letter + " "
            else:
                display_word += "_ "
        print(f"\nWord: {display_word}")
        print(f"Guessed letters: {', '.join(sorted(guessed_letters))}")
        print(f"Attempts left: {attempts}")

        if "_ " not in display_word:
            print("\nCongratulations! You guessed the word!")
            print(f"The word was: {secret_word}")
            break

        guess = input("Guess a letter: ").lower()

        if len(guess) != 1 or not guess.isalpha():
            print("Invalid input. Please enter a single letter.")
            continue

        if guess in guessed_letters:
            print("You already guessed that letter. Try again.")
            continue

        guessed_letters.append(guess)

        if guess in secret_word:
            print("Good guess!")
        else:
            print("Wrong guess!")
            attempts -= 1

    if attempts == 0:
        print("\nGame Over! You ran out of attempts.")
        print(f"The word was: {secret_word}")

if __name__ == "__main__":
    play_battle_of_words()
