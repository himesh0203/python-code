import random

def run_quiz(questions):
    score = 0
    random.shuffle(questions) # Randomize question order

    for i, q_data in enumerate(questions):
        print(f"\nQuestion {i + 1}: {q_data['question']}")
        for j, option in enumerate(q_data['options']):
            print(f"  {chr(65 + j)}. {option}")

        user_answer = input("Your answer (A, B, C, or D): ").upper()

        if user_answer == q_data['answer']:
            print("Correct!")
            score += 1
        else:
            print(f"Incorrect. The correct answer was {q_data['answer']}.")
    
    print(f"\nQuiz finished! You scored {score} out of {len(questions)}.")

